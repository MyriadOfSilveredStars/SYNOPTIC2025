<script defer src="/JS/settings.js"></script>
<div>
    <h1> User Settings </h1>

    <section class="settings-container">
        <p>Update your user information and settings here!</p>

        <button type="button" class="collapsible">Personal Information</button>
        <div class="content">
            <form id="updateSettingsForm">
            <section class="inner-settings-container">
                <h2>Basic Information</h2>
                <div class="form-group">
                    <label for="firstName">First Name: </label>
                    <input type="text" placeholder="<%- params.name %>" id="firstName" name="firstName" />
                </div>
                <div class="form-group">
                    <label for="surname">Surname: </label>
                    <input type="text" placeholder="<%- params.surname %>" id="surname" name="surname" />
                </div>
                <div class="form-group">
                    <label for="userAge">Age: </label>
                    <input type="text" placeholder="<%- params.birth %>" onfocus="(this.type='date')" onblur="(this.type='text')" id="userAge" name="userAge" required/>
                </div>
                <div class="form-group">
                    <label for="userGender">Gender: </label>
                    <select id="userGender" name="userGender" placeholder="<%- params.gender %>">
                        <option value="">Select</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="prefer-not-to-say">Prefer not to say</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="userEmail">Email: </label>
                    <input type="email" placeholder="<%- params.email %>" id="userEmail" name="userEmail" required/>
                </div>
            </section>

            <section class="inner-settings-container">
                <h2>Health Information</h2>
                <div class="form-group">
                    <label for="userHeight">Height: </label>
                    <input type="text" placeholder="<%- params.height %>" id="userHeight" name="userHeight"/>
                </div>
                <div class="form-group">
                    <label for="userWeight">Weight: </label>
                    <input type="text" placeholder="<%- params.weight %>" id="userWeight" name="userWeight"/>
                </div>
                <div class="form-group">
                    <label for="userConditions">Pre-Existing Conditions: </label>
                    <input type="text" placeholder="<%- params.precons %>" id="userConditions" name="userConditions"/>
                </div>
            </section>
    
            <section class="inner-settings-container">
                <h2>User Profile</h2>
                <textarea name="userProfile" id="userProfile" class="profile-box" type="text"></textarea>
            </section>

            <br>
            <button type="submit" id="btn">Update Personal Details</button>
            <br>
            <br>
        </form>
        </div> 

        <br>
        <br>

        <button type="button" class="collapsible">App Information</button>
        <div class="content">
            <section class="inner-settings-container">
                <h2>App Settings</h2>
                <div class="form-group">
                    <label for="tracker">Change Tracker</label>
                    <select id="tracker" name="tracker" required>
                        <option value="">Select</option>
                        <option value="google">Google Fit</option>
                        <option value="apple">Apple Fitness</option>
                        <option value="fitbit">FitBit</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <label for="emailCheck">Allow Group Emails: </label>
		        <input type="checkbox" id="email" name="email"/>
            </section>
        </div>

        <br> 
        <br>
        
        <br>
        </form>
        <br>
        <a href="/">Home</a>
    </section>

    <br>
    <br>
    <a href="/delete-account" class="delbtn">Delete Account</a>
    <br>
    <br>

</div>